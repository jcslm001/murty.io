{
  "name": "murty",
  "version": "3.8.0",
  "author": "Brendan Murty <b@murty.io> (http://b.murty.io)",
  "homepage": "https://murty.io",
  "description": "The Murty website built with Angular and Express, coded with Atom and hosted by Digital Ocean.",
  "private": true,
  "bugs": {
    "url": "https://github.com/brendanmurty/murty.io/issues/new?assignee=brendanmurty"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brendanmurty/murty.io"
  },
  "license": "SEE LICENSE IN license.md",
  "dependencies": {
    "express": "^4.15.3",
    "helmet": "^3.9.0",
    "@bower_components/angular": "angular/bower-angular#1.6.x",
    "@bower_components/angular-route": "angular/bower-angular-route#1.6.x",
    "@bower_components/angular-sanitize": "angular/bower-angular-sanitize#>=1.3.0 <2.0.0",
    "@bower_components/ng-showdown": "showdownjs/ng-showdown#1.x",
    "@bower_components/showdown": "showdownjs/showdown#1.x"
  },
  "devDependencies": {
    "bower": "^1.7.7",
    "compression": "^1.6.2",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-uglify": "^3.0.0",
    "nodemon": "^1.11.0"
  },
  "scripts": {
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').resolve('node_modules/@bower_components'), 'bower_components', 'junction') } catch (e) { }\"",
    "startdev": "nodemon server.js",
    "start": "set NODE_ENV=production && export APP_DOMAIN=murty.io && export APP_PORT=80 && forever start -o murty-output.log -e murty-error.log -l murty-forever.log -a server.js",
    "stop": "forever stopall",
    "logserver": "tail -f ~/.forever/murty-forever.log",
    "logoutput": "tail -f ~/.forever/murty-output.log",
    "logerror": "tail -f ~/.forever/murty-error.log"
  },
  "engines": {
    "yarn": ">= 1.0.0"
  }
}
