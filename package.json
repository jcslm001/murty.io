  "author": "Brendan Murty <brendan@murty.email> (https://murty.io/brendan)",
  "homepage": "https://murty.io",
  "description": "The Murty website built with Angular and Express, coded with Atom and hosted by Digital Ocean.",
  "private": true,
  "bugs": {
    "url": "https://trello.com/b/ag7rb8Hk/murtyio"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brendanmurty/murty.io"
  },
  "license": "SEE LICENSE IN license.md",
  "dependencies": {
    "angular": "1.6.x",
    "angular-route": "1.6.x",
    "angular-sanitize": "1.6.x",
    "express": "^4.15.3",
    "helmet": "^3.11.0",
    "ng-showdown": "1.x",
    "showdown": "1.x"
  },
  "devDependencies": {
    "compression": "^1.6.2",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-uglify": "^3.0.0",
    "nodemon": "^1.15.0"
  },
  "scripts": {
    "startdev": "nodemon server.js",
    "start": "set NODE_ENV=production && export APP_DOMAIN=murty.io && export APP_PORT=80 && forever start -o murty-output.log -e murty-error.log -l murty-forever.log -a server.js",
    "stop": "forever stopall",
    "clearcache": "rm content/brendan/posts/*.json",
    "generatejson": "curl https://murty.io/api/feed/by/brendan && curl https://murty.io/api/posts/by/brendan",
    "generatejsondev": "curl http://localhost/api/feed/by/brendan && curl http://localhost/api/posts/by/brendan",
    "logserver": "tail -f ~/.forever/murty-forever.log",
    "logoutput": "tail -f ~/.forever/murty-output.log",
    "logerror": "tail -f ~/.forever/murty-error.log"
  }
}
